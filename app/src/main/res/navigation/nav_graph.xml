<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.blinknpay.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.blinknpay.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.blinknpay.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.blinknpay.BluetoothFragment"
        android:label="Home"
        tools:layout="@layout/bluetooth_fragment">
        <action
            android:id="@+id/action_bluetoothFragment_to_merchantCatalogFragment"
            app:destination="@id/merchantCatalogFragment" />
        <action
            android:id="@+id/action_navigation_home_to_servicesFragment"
            app:destination="@id/servicesFragment" />
    </fragment>

    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.blinknpay.ui.ServicesFragment"
        android:label="BlinknPay LiVE"
        tools:layout="@layout/fragment_services">
        <action
            android:id="@+id/action_services_to_splitBill"
            app:destination="@id/splitBillFragment" />
        <action
            android:id="@+id/action_services_to_exchange"
            app:destination="@id/exchangeFragment" />
        <action
            android:id="@+id/action_services_to_chamaVault"
            app:destination="@id/chamaVaultFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_services_to_merchantCatalog"
            app:destination="@id/merchantCatalogFragment" />
    </fragment>

    <fragment
        android:id="@+id/splitBillFragment"
        android:name="com.example.blinknpay.SplitBillFragment"
        android:label="Split Bill"
        tools:layout="@layout/fragment_split_bill" />

    <fragment
        android:id="@+id/exchangeFragment"
        android:name="com.example.blinknpay.ExchangeFragment"
        android:label="Exchange"
        tools:layout="@layout/fragment_exchange" />

    <fragment
        android:id="@+id/chamaVaultFragment"
        android:name="com.example.blinknpay.ui.ChamaVaultFragment"
        android:label="Chama Yetu"
        tools:layout="@layout/fragment_chama_vault">

        <action
            android:id="@+id/action_vault_to_approval"
            app:destination="@id/chamaApprovalFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/chamaApprovalFragment"
        android:name="com.example.blinknpay.ui.ChamaApprovalFragment"
        android:label="Authorize Payout">
        <argument
            android:name="amount"
            app:argType="float" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.blinknpay.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_qr_scanner"
        android:name="com.example.blinknpay.QrScannerFragment"
        android:label="Scan QR"
        tools:layout="@layout/fragment_qr_scanner" />

    <fragment
        android:id="@+id/receivedFragment"
        android:name="com.example.blinknpay.ReceivedFragment"
        android:label="Received"
        tools:layout="@layout/received">
        <argument android:name="amount" app:argType="string" android:defaultValue="0" />
        <argument android:name="merchantName" app:argType="string" android:defaultValue="" />
        <argument android:name="timestamp" app:argType="string" android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.blinknpay.TransactionsFragment"
        android:label="Transactions History"
        tools:layout="@layout/fragment_transactions">
        <action
            android:id="@+id/action_transactionsFragment_to_transactionDetailsFragment"
            app:destination="@id/transactionDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/transactionDetailsFragment"
        android:name="com.example.blinknpay.TransactionDetailsFragment"
        android:label="Transaction Details"
        tools:layout="@layout/fragment_transaction_details">
        <argument android:name="transactionId" app:argType="string" android:defaultValue="" />
        <argument android:name="amount" app:argType="float" android:defaultValue="0.0" />
        <argument android:name="sender" app:argType="string" android:defaultValue="Unknown" />
        <argument android:name="transactionRef" app:argType="string" android:defaultValue="" />
        <argument android:name="timestamp" app:argType="long" android:defaultValue="0L" />
    </fragment>

    <fragment
        android:id="@+id/merchantCatalogFragment"
        android:name="com.example.blinknpay.ui.merchant.MerchantCatalogFragment"
        android:label="Merchant Catalog"
        tools:layout="@layout/fragment_merchant_catalog">
        <argument android:name="merchantId" app:argType="string" android:defaultValue="" />
        <argument android:name="merchantName" app:argType="string" android:defaultValue="" />
    </fragment>

</navigation>