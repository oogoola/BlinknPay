<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark mode application theme -->
    <style name="Theme.BlinknPay" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <!-- Status & navigation bars -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Material Components customization -->
        <item name="materialButtonStyle">@style/MyButtonStyleChartreuse</item> <!-- use your rounded button -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>

        <!-- Adaptive text colors -->
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>

    </style>

</resources>
