<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

        <!-- Logo container -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:elevation="1dp">

            <!-- Business logo -->
            <ImageView
                android:id="@+id/receiverIconImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Business Logo"
                android:background="@drawable/circle_clipper" />

            <!-- Fallback first-letter icon -->
            <TextView
                android:id="@+id/receiverIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:contentDescription="Business Icon Text"/>
        </FrameLayout>

        <!-- Right section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receiverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BlinknPay Merchant"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/receiverCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant and Dining"
                android:textColor="#757575"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_regular"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/receiverDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20m away"
                android:textColor="#00BFA6"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_light"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Navigation / arrow icon -->
        <ImageView
            android:id="@+id/receiverArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_chevron_right"
            app:tint="#BDBDBD"
            android:layout_marginStart="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
