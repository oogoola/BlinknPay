<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- ðŸ”¹ Toolbar with back button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_qr"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_back"
        app:title="Scan QR Code"
        app:titleTextColor="@android:color/white" />

    <!-- ðŸ”¹ Camera preview / scanner area -->
    <FrameLayout
        android:id="@+id/qr_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="0dp">

        <!-- CameraX Preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />


        <!-- Overlay rectangle to indicate scanning area -->
        <View
            android:id="@+id/qr_overlay"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_scanner_overlay" />

        <!-- Guide text -->
        <TextView
            android:id="@+id/qr_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Align the QR code within the frame"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="48dp"
            android:gravity="center"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
