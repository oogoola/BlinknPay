<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ðŸ”¢ Amount Input (with Mic Icon Inline) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount (KSh)"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_money"
        app:startIconTint="@color/colorAccent"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/mic3"

        app:endIconTint="@color/colorAccent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:padding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸŸ¢ Mode Toggle Row -->






    <LinearLayout
        android:id="@+id/modeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mode_toggle_bg"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_store"
            android:contentDescription="Merchant Icon"
            app:tint="@color/colorAccent"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Mode"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/modeSubLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch between Merchant and Customer"
                android:textSize="13sp"
                android:textColor="#888888"/>
        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/modeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="4dp"
            app:thumbTint="@color/colorAccent"
            app:trackTint="@color/light_gray" />



    </LinearLayout>












    <!-- ðŸ’¸ Pay Button -->
    <Button
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pay Now"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:enabled="false"
        android:background="@drawable/rounded_button" />

    <!-- ðŸ“¡ Current Mode Status -->
    <TextView
        android:id="@+id/currentMerchantText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Customer Mode (Scanning for Merchants)"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- ðŸ¬ Nearby Merchants -->
    <TextView
        android:id="@+id/nearbyMerchantsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nearby Merchants"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- ðŸ§­ List of Receivers/Merchants -->
    <ListView
        android:id="@+id/receiverList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:divider="@color/light_gray" />

</LinearLayout>
