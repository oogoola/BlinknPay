<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Merchant Title -->
    <TextView
        android:id="@+id/catalogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Merchant Products"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111111"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyCatalogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No products available"
        android:textSize="15sp"
        android:textColor="#9CA3AF"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/catalogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top 4 Products Horizontal Recycler (Optional) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topProductsRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/catalogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Remaining Products Vertical Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalogRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topProductsRecycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
