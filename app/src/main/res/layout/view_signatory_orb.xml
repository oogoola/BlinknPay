<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orb_root"
    android:layout_width="65dp"
    android:layout_height="80dp"
    android:layout_marginEnd="12dp">

    <View
        android:id="@+id/presence_glow"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/shape_circle_glow"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_signatory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:padding="1dp"
        android:src="@drawable/ic_signatory_placeholder"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="1.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_verified_badge"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_verified_check"
        android:visibility="gone"
        app:tint="#6CAF10"
        app:layout_constraintTop_toTopOf="@id/iv_signatory"
        app:layout_constraintEnd_toEndOf="@id/iv_signatory" />

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLE"
        android:textAllCaps="true"
        android:textColor="#888888"
        android:textSize="9sp"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>