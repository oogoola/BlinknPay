<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient"
    android:clipToPadding="false"
    tools:context=".WithdrawOptionsBottomSheet">

    <!-- ============================= -->
    <!-- Radar Animation (Center) -->
    <!-- ============================= -->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/radarAnimation"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:lottie_rawRes="@raw/radar_scan"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1.0" />

    <!-- ============================= -->
    <!-- Floating Agent Cards Overlay -->
    <!-- ============================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAgents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="300dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_agent_card" />

</FrameLayout>
