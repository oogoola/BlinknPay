<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/merchantCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_merchant_card">

        <!-- Logo or first-letter icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/receiverIconImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_logo"
                android:visibility="gone"
                android:contentDescription="@string/merchant_logo"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/receiverIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="?"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                android:background="@drawable/circle_background"/>
        </FrameLayout>

        <!-- Merchant textual info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Merchant Name -->
            <TextView
                android:id="@+id/txtMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Name"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <!-- Category -->
            <TextView
                android:id="@+id/txtMerchantCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant Category"
                android:textColor="#EEEEEE"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular" />

            <!-- Distance / Location -->
            <TextView
                android:id="@+id/txtMerchantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.22m away"
                android:textColor="#D0D0D0"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_light" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
