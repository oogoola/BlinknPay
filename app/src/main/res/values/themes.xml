<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================================= -->
    <!-- APP THEME -->
    <!-- ========================================================= -->
    <style name="Theme.BlinknPay" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Backgrounds / Surfaces -->
        <item name="android:colorBackground">@color/bg_soft</item>
        <item name="colorSurface">@color/bg_soft</item>
        <item name="colorOnBackground">@color/primary_text</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- Button default style -->
        <item name="materialButtonStyle">@style/FlatButtonNoTint</item>

        <!-- TextInput / EditText default styles -->
        <item name="textInputStyle">@style/RoundedTextInputLayout</item>
        <item name="editTextStyle">@style/RoundedEditText</item>

        <!-- Default Text Colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>

        <!-- ðŸ”‘ Material shape system -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeRounded28</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeRounded28</item>

    </style>

</resources>
