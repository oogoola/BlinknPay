<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.BlinkPay" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status & nav bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Material Components styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>

        <!-- Customize typography or other components as needed -->
    </style>
</resources>
