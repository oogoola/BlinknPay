<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================================= -->
    <!-- MAIN APP THEME -->
    <!-- ========================================================= -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Main Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/bg_soft</item>
        <item name="colorSurface">@color/bg_soft</item>
        <item name="colorOnBackground">@color/primary_text</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- UNIVERSAL BUTTON FIX (NO BLUE TINT) -->
        <item name="materialButtonStyle">@style/FlatButtonNoTint</item>

        <!-- TextInput and EditText -->
        <item name="textInputStyle">@style/RoundedTextInputLayout</item>
        <item name="editTextStyle">@style/RoundedEditText</item>

        <!-- Default Text Colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>

    </style>


    <!-- ========================================================= -->
    <!-- NO TINT / NO RIPPLE MATERIAL BUTTON (GLOBAL FIX) -->
    <!-- ========================================================= -->



    <!-- ========================================================= -->
    <!-- ROUNDED INPUT FIELDS -->
    <!-- ========================================================= -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
    </style>

    <style name="RoundedEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <!-- ========================================================= -->
    <!-- CUSTOM KEYPAD BUTTON (OTP / PIN) -->
    <!-- ========================================================= -->


    <!-- ========================================================= -->
    <!-- UNIFIED KEYPAD BUTTON STYLE (DIGITS + ICONS) -->
    <!-- ========================================================= -->
    <style name="KeypadButtonStyle" parent="Widget.MaterialComponents.Button">

        <!-- Fixed size for perfect grid -->
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">6dp</item>

        <!-- Visuals -->
        <item name="android:background">@drawable/otp_digit_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>

        <!-- Critical: remove internal padding -->
        <item name="android:padding">0dp</item>

        <!-- Kill Material tint & ripple -->
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="useMaterialThemeColors">false</item>

        <!-- Prevent auto min sizes -->
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

    </style>



    <style name="KeypadIconButtonStyle">
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/otp_digit_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="backgroundTint">@null</item>
    </style>























    <!-- ========================================================= -->
    <!-- VOICE INPUT DIALOG -->
    <!-- ========================================================= -->
    <style name="CustomVoiceDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/rounded_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowElevation">12dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!-- Add this in styles.xml or a common file -->
    <style name="MyButtonStyleChartreuse" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_chartreuse</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>



    <!-- ========================================================= -->
    <!-- MPESA TEXT STYLES -->
    <!-- ========================================================= -->
    <style name="MPesaActiveText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mpesa_green</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MPesaInactiveText">
        <item name="android:textColor">@color/mpesa_grey</item>
        <item name="android:singleLine">true</item>
    </style>






    <!-- OTP Input Fields -->
    <style name="OtpEditTextStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/otp_background</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ShapeRegisterButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>



    <!-- Keypad Buttons -->





    <!-- Rounded shape for MaterialButtons -->
    <style name="ShapeRounded28" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>







    <!-- Button style with chartreuse background & rounded corners -->
    <style name="FlatButtonNoTint" parent="Widget.MaterialComponents.Button">
        <!-- Disable automatic Material theme colors -->
        <item name="useMaterialThemeColors">false</item>

        <!-- Button background color -->
        <item name="backgroundTint">@color/chartreuse</item>

        <!-- No border -->
        <item name="strokeWidth">0dp</item>

        <!-- Ripple effect -->
        <item name="rippleColor">@color/green</item>

        <!-- Remove default insets -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>

        <!-- Remove default padding (optional, ensures height consistency) -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <!-- ðŸ”‘ Apply rounded corners -->
        <item name="shapeAppearanceOverlay">@style/ShapeRounded28</item>
    </style>








    <style name="QuickActionItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="QuickActionIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="QuickActionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>



    <style name="StatusItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
    </style>




    <style name="RoundActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>






</resources>
