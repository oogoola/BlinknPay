<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your main app theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Voice Input Dialog Style -->
    <style name="CustomVoiceDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Size -->
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <!-- Background -->
        <item name="android:windowBackground">@drawable/rounded_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <!-- Elevation & floating effect -->
        <item name="android:windowElevation">12dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Animations -->
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    </style>

    <!-- Fade In/Out Animation for dialogs -->
    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
